<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-US">

	<head>
		<title><%= @page_title || 'Chaldkydri' %></title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> 
		<%= stylesheet_link_tag 'style' %>
		<%= auto_discovery_link_tag :atom, posts_path(:atom) %>
	  	<%= javascript_include_tag :defaults, "jquery" %>

		<!--
		   	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js"></script>
		   	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.js"></script>
		   	<% if protect_against_forgery? %>
		     		<script type='text/javascript'>
		         		//<![CDATA[
		           	window._auth_token_name = "#{request_forgery_protection_token}";
		           	window._auth_token = "#{form_authenticity_token}";
		       		//]]>
		       		</script>
		   	<% end %>

		   	<%= javascript_include_tag 'application' %>
		   	<%= javascript_include_tag 'jquery.form' %>
		-->
	</head>

	<body>
	
		<!-- Header -->
		<div id="header">
			<div class="session">
				<% if user_logged_in? %>
					You are logged in as: <%= current_user.login %>.
					<%= link_to 'Logout', logout_url %>
				<% else %>
					Not logged in.
					<%= link_to 'Login', login_url %>
				<% end %>
			</div>
			<div class="logo"> 
				<h1>Chaldkydri</h1>
			</div>
			<div class="navigation">
				<%= link_to 'Posts', posts_path %>
			</div>

		</div>

		<!-- Body -->
		<div id="content">
			<% flash.each do |key, value| %>
				<div id="flash" class="flash_<%= key %>">
					<span class="message"><%= value %></span>
				</div>
			<% end -%>

			<%= yield :layout %>
		</div>

	</body>
</html>