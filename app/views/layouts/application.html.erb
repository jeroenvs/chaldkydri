<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-US">

	<head>
		<title><%= @page_title || 'Chaldkydri' %></title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> 
		<%= stylesheet_link_tag 'style' %>
		<%= auto_discovery_link_tag :atom, posts_path(:atom) %>
	  	<%= javascript_include_tag :all %>

		<!--
		   	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js"></script>
		   	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.js"></script>
		   	<% if protect_against_forgery? %>
		     		<script type='text/javascript'>
		         		//<![CDATA[
		           	window._auth_token_name = "#{request_forgery_protection_token}";
		           	window._auth_token = "#{form_authenticity_token}";
		       		//]]>
		       		</script>
		   	<% end %>

		   	<%= javascript_include_tag 'application' %>
		   	<%= javascript_include_tag 'jquery.form' %>
		-->
	</head>

	<body>
	
		<!-- Header -->
		<div id="header">
			<div class="superHeader">
				<% if user_logged_in? %>
					<span>You are logged in as: </span> <%= current_user.login %>
				<% else %>
					<span>Welcome Guest</span>
				<% end %>
			</div>
			<div class="midHeader"> 
				<h1 class="headerTitle" lang="la">Chaldkydri</h1>
			</div>
			<div class="subHeader">
				<span class="doNotDisplay">Navigation:</span>
				<% if user_logged_in? %>
					<%= link_to 'Logout', logout_url %>
				<% else %>
					<%= link_to "Signup", signup_url %> | <%= link_to 'Login', login_url %>
				<% end %> 
				| <%= link_to 'Contact Us', 'contact' %>
			</div>

		</div>

		<!-- Body -->
		<div id="main-copy">
			<% flash.each do |key,value| %>
				<div id="flash" class="flash_<%= key %>">
					<span class="message"><%= value %></span>
				</div>
			<% end -%>

			<%= yield :layout %>
		</div>

	</body>
</html>