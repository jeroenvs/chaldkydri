<%= render :partial => @post %>

<p>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
</p>

<br />
<h3>Comments</h3>

<div id="comments">
  <%= render @post.comments %>
</div>

<%- if user_logged_in? %>
	<br />
	<h3>Add comment</h3>

	<% form_for [@post, Comment.new] do |f| %>
		<p>
			<%= f.text_area :body %>
			<%= f.submit "Add comment" %>
		</p>
	<% end %>
<%- end %>

<script type="text/javascript">
	$(function() {
		$('#new_comment').ajaxSubmit();
	});
</script>