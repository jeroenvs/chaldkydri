<%= render :partial => @post %>

<p>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
</p>

<h3>Comments</h3>

<div id="comments">
  <%= render @post.comments %>
</div>

<%- if user_logged_in? %>
	<% remote_form_for [@post, Comment.new] do |f| %>
		<p>
			<%= f.label :body, "New comment" %><br />
			<%= f.text_area :body %><br />
			<%= f.submit "Add comment" %>
		</p>
	<% end %>
<%- end %>